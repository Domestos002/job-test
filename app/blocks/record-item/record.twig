<div class="record-item">
    <div class="record-item__img">
        <img src="http://via.placeholder.com/300x200" alt="">
        <span class="pill">
            {{ pill }}
        </span>
    </div>
    <div class="record-item__description">
        <div class="record-item__title">
            <h3>{{ title }}</h3>
        </div>
        <div class="record-item__text">
            {{ text }}
        </div>
    </div>
    <div class="record-item__timer-wrapper">
        <span class="record-item__timer-text">Осталось</span>
        <div class="record-item__timer-inner">
            <span class="record-item__timer js-record-timer"></span>
            <p>дней</p>
        </div>
    </div>
</div>